# Database (SQLite default, PostgreSQL for production)
DATABASE_URL="file:./dev.db"
# DATABASE_URL="postgresql://username:password@localhost:5432/twitch_queue"

# Twitch OAuth Application (for user login)
TWITCH_CLIENT_ID="your_twitch_app_client_id"
TWITCH_CLIENT_SECRET="your_twitch_app_secret"
TWITCH_REDIRECT_URI="http://localhost:5000/api/auth/twitch/callback"

# Twitch Bot Configuration (for the bot account)
TWITCH_BOT_USERNAME="your_bot_username"
TWITCH_BOT_OAUTH_TOKEN="oauth:your_bot_token_here"

# YouTube API
YOUTUBE_API_KEY="your_youtube_api_key_here"

# Authentication & Sessions
JWT_SECRET="your_super_secret_jwt_key_here"
SESSION_SECRET="your_session_secret_here"

# Server Configuration
PORT=5000
NODE_ENV="development"
CORS_ORIGIN="http://localhost:3000"
CLIENT_URL="http://localhost:3000"

# Bot Settings (optional - can also be configured via database)
MAX_QUEUE_SIZE=50
SUBMISSION_COOLDOWN=30
MAX_VIDEO_DURATION=600
AUTO_PLAY_NEXT=true

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/app.log"
